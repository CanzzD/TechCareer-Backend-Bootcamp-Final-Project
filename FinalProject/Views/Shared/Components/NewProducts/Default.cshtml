@model List<Product>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">New Products</h5>
    </div>
    <div class="card-body">
        @foreach (var product in Model)
        {
            <div class="mb-3">
                <h6 class="mb-0">
                    <a href="/products/details/@product.ProductUrl"> @product.ProductName</a>
                </h6>
            </div>
        }
    </div>
</div>