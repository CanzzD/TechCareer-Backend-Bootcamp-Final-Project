@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            <img src="/img/@Model.UserImage" class="img-fluid" alt="">
        </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-2">
            <h5>@Model.Name  @Model.Surname</h5>
            <hr>
            <div id="posts">
                <h5 class="my-4">İlandaki Ürünler</h5>
                <ul class="list-group">
                    @foreach (var product in @Model.Products)
                    {
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i><a
                                href="/products/details/@product.ProductUrl">@product.ProductTitle</a></li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">Yorumlar</h5>
                <ul class="list-group">
                    @foreach (var comment in @Model.Comments)
                    {
                        <li class="list-group-item"><i class="bi bi-chat-right-text-fill"></i><a
                                href="/products/details/@comment.Product.ProductUrl">@comment.CommentText</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>