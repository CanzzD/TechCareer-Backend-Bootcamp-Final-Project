@model List<Product>

<div class="row">
    <div class="col-12">
        <h2>Product List</h2>
        <a href="/products/create" class="btn btn-success">New Products</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 200px;">Image</th>
                    <th>Title</th>
                    <th>IsActive</th>
                    <th style="width: 200px;">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td><img src="~/img/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.ProductTitle</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.ProductId" class="btn btn-warning">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        </div>
</div>
