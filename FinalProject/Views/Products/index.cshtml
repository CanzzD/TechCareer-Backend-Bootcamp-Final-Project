@model ProductViewModel

    <div class="row">
        <div class="col-lg-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">Popular Products</h1>
                    @foreach(var product in Model.Products){
                            <div class="card bg-transparent border-0 mb-3">
                                <div class="row">
                                    <div class="col-4">
                                        <img src="~/img/@product.Image" class="img-fluid rounded" alt="">
                                    </div>
                                    <div class="col-8">
                                        <h5><a href="/products/details/@product.ProductUrl" class="btn-link fw-bold">@product.ProductName</a></h5>
                                        <p>@product.ProductPrice TL</p>
                                        <p>@product.ProductDescription</p>
                                        <p>STOK MÄ°KTARI : @product.StockQuantity</p>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        }

                        <nav>
                            <ul class="pagination">
                                <li class="page-item"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item"><a href="#" class="page-link">3</a></li>
                            </ul>
                        </nav>
            </div>
        </div>
        <div class="col-lg-4">
            <vc:categories-menu></vc:categories-menu>
            <vc:new-products></vc:new-products>
        </div>
    </div>
    